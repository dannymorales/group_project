<!DOCTYPE html>
<html>
<head>
  <title>Mystore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<% if spree_user_signed_in? %>
			<p id="greeting">hello <%= spree_current_user.email %></p>
			<p><%= link_to 'logout', spree.logout_path %></p>
		<% else %>
		<p><%= link_to 'login', spree.new_spree_user_session_path %> |
			<%= link_to 'sign up', spree.new_spree_user_registration_path %></p>
		<% end %>
	</header>

	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

	
  </head>
  	
 <body>
 
	
<%= yield %>


</body>
</html>
